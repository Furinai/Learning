<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.linter.learning.course.dao.CategoryDao">

    <resultMap type="cn.linter.learning.course.entity.Category" id="CategoryMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="parentId" column="parent_id"/>
    </resultMap>

    <!--通过ID查询单个分类-->
    <select id="selectById" resultMap="CategoryMap">
        select id, name, parent_id
        from category
        where id = #{id}
    </select>

    <!--查询所有分类-->
    <select id="list" resultMap="CategoryMap">
        select id, name, parent_id
        from category
    </select>

    <!--通过分类实体查询所有分类-->
    <select id="listByEntity" resultMap="CategoryMap">
        select id, name, parent_id
        from category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
    </select>

    <!--插入单个分类-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into category(name, parent_id)
        values (#{name}, #{parentId})
    </insert>

    <!--更新分类-->
    <update id="update">
        update category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--删除分类-->
    <delete id="delete">
        delete
        from category
        where id = #{id}
    </delete>

</mapper>
